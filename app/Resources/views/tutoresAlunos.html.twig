<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Tutores e Alunos</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/cadastroUsuarios.css">
        <link rel="stylesheet" type="text/css" href="../assets/css/cadastro.css">
    </head>
    <body>
      {{ include('menuLateral.html.twig') }}
      {% include 'menuLateralCadastro.html.twig' with {"dadosMenuLateralCadastro": dadosMenuLateralCadastro } only %}

      <div class="menuIcones">
        <div class="line"></div>
        <a href="#" class="linkCircle"><div class="circle" id="circleTurma"><img src="../assets/img/Turma.png" class="iconCircleMenu"></div></a>
        <a href="{{web_dir}}portfolioPropositor" class="linkCircle"><div class="circle" id="circlePortProp"><img src="../assets/img/Portfólio e Propositores.png" class="iconCircleMenu"></div></a>
        <a href="{{web_dir}}tutores" class="linkCircle"><div class="circle" id="circleTutores"><img src="../assets/img/Tutores.png" class="iconCircleMenu" width="35" height="45"></div></a>
        <a href="{{web_dir}}alunos" class="linkCircle"><div class="circle" id="circleAlunos"><img src="{{web_dir}}../assets/img/alunos.png" class="iconCircleMenu"></div></a>
        <a href="{{web_dir}}tutoresAlunos" class="linkCircle"><div class="circle" id="circleTutoresAlunos" style="background-color: #9187c7;"><img src="../assets/img/Turma.png" class="iconCircleMenu"></div></a>

        <div class="legenda" id="legendaTurmas">TURMA</div>
        <div class="legenda">PORTFÓLIOS E PROPOSITORES</div>
        <div class="legenda" id="legendaTutores">TUTORES</div>
        <div class="legenda" id="legendaAlunos">ALUNOS</div>
        <div class="legenda" id="legendaTutoresAlunos">TUTORES E ALUNOS</div>
      </div>

      <div class="cadastroPortProp">
        <div class="boxTitulo">
          <span class="titleBoxTitulo">Alunos</span><br><br>
          Aqui você adiciona os ALUNOS aos seus respectivos tutores.<br>
          Ex: Turma A > Portfólio B > Tutor C > Aluno D e Aluna E
        </div>
        {% if arrayTutores is empty %}
          <h2 id="userEmpty" style="top: 55%;">Não há tutores cadastrados</h2>
        {% else %}
          {% for tutores in arrayTutores %}
            <div class="arrastarAluno">
              <div class="nomeTutor" id="{{tutores.idUser}}">{{tutores.nmUser}}</div>
              <div class="boxArrastarAluno" id="{{tutores.idUser}}" ondrop="dropAluno(event)" ondragover="allowDrop(event)">
                <div class="textArrastarAluno" id="{{tutores.idUser}}">arraste e solte os<br>ALUNOS DESTE TUTOR</div>
                <img class="logoArrastar" id="{{tutores.idUser}}" style="margin-top:0%;" src="../assets/img/arraste.png">
              </div>
            </div>
          {% endfor %}

          {{ form_start(formAlunoTutor) }}

              {{form_row(formAlunoTutor.IdAlunosTutores)}}

                <input type="submit" class="salvarTutoresAlunos" value="SALVAR">
          {{ form_end(formAlunoTutor) }}
        {% endif %}
      </div>
    </body>
</html>
<script src="../assets/js/tutoresAlunos.js"></script>
