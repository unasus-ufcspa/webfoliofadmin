<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Portfólios</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/registroUsuarios.css">
    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        <div id="header">
            <img src="../assets/img/iconePortfolio.png" id="iconPessoa">
            <span id="titulo">PORTFÓLIOS</span>
        </div>
        <div id="pesquisa">
          <img src="../assets/img/lupa.png" id="iconLupa" title="Pesquisar">
          <input type="text" placeholder="Procurar Portfólio" id="inputPesquisa">
          <div class="ui medium button" id="addUser" onclick="addUser();">NOVO PORTFÓLIO</div>
        </div>

        <h2 id="naoEncontrado">Nenhum resultado encontrado</h2>

        <div id="listaUsers">
            {% set i=0 %}
            {% for portfolio in portfolios %}
                {% if i is even %}                                              <!--Testa se é par ou ímpar só pra poder aplicar o CSS no item da lista-->
                    <div class="itemUserA itemUsuario">
                        <input type="checkbox" name="Portfolio[]" value="{{portfolio.idPortfolio}}" id="{{i}}" class="checkboxUser"> <!--O id desse item tem que ser o contador pra que o checkbox funcione-->
                        <label for="{{i}}"></label>                             <!--Dentro desse for vai o id que foi colocado no checkbox pra que um fique ligado ao outro-->
                        <div class="nomeUser">{{portfolio.dsTitle}}</div>
                        <div class="emailUser">{{portfolio.nmAtividades}} atividades</div>
                        <img src="../assets/img/buttonPencil.png" class="iconEditar" title="Editar portfólio"
                              <!-- onclick='editarUser("{{i}}", "{{portfolio.nmUser}}", "{{administrador.dsEmail}}", "{{portfolio.idPortfolio}}")' -->
                              >
                    </div>
                {% else %}
                    <div class="itemUserB itemUsuario">
                        <input type="checkbox" name="Portfolio[]" value="{{portfolio.idPortfolio}}" id="{{i}}" class="checkboxUser">
                        <label for="{{i}}"></label>
                        <div class="nomeUser">{{portfolio.dsTitle}}</div>
                        <div class="emailUser">{{portfolio.nmAtividades}}</div>
                        <img src="../assets/img/buttonPencil.png" class="iconEditar" title="Editar portfólio"
                             <!-- onclick='editarUser("{{i}}", "{{administrador.nmUser}}", "{{administrador.dsEmail}}", "{{administrador.idUser}}")' -->
                             >
                    </div>
                {% endif %}
                {% set i = i+1 %}
            {% endfor %}

            {%if portfolios is empty %}
                <h2 id="userEmpty">Não há portfólios cadastrados</h2>
            {%endif%}
        </div>
        <div id="excluirUsuario">
            <div id="titleExcluir">Excluir</div>
            <div id="mensagemExcluir">Tem certeza que deseja excluir esse portfólio?</div>
            <div id="optionExcluir">
              <div id="cancelarExcluir" onclick="cancelarExcluir();">CANCELAR</div>
              <div id="confirmarExcluir" onclick='confirmarExcluirAdministrador("{{web_dir}}");'>SIM</div>
            </div>
        </div>

        <div id="delete">
            <img src="../assets/img/lixo.png" id="iconDelete" title="Excluir item" onclick="excluirUser()">
        </div>
    </body>
</html>

<script src="../assets/js/registroUsuarios.js"></script>
