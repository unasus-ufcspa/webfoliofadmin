<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Cadastro Turma</title>

        <script src="/webfolioAdmin/node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="/webfolioAdmin/semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/cadastro.css">
    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        {{ include('menuLateralCadastro.html.twig') }}

        <div class="menuIcones">
          <div class="line"></div>
          <div class="circle"></div><div class="legenda">TURMAS</div>
        <div>
        <div class="cadastroTurma">
          <div class="tituloCadastro">Nova turma</div>
          <div class="campoCadastro">
            <div class="colunaEsquerda">
              <img  id="logoTurma" src="/webfolioAdmin/assets/img/Turma.png"><input type="text" placeholder="Nome da Turma:" class="inputNome"><br>
              <textarea rows="15" cols="75" placeholder="Descrição:" class="inputDescricao"></textarea>
            </div>
            <div class="colunaDireita">
              <img  id="logoCodTurma" src="/webfolioAdmin/assets/img/codTurma.png"><input type="text" placeholder="Código:" class="inputCod"><br>
              <img  id="logoDtInicio" src="/webfolioAdmin/assets/img/dataInicio.png"><input type="date" placeholder="Data de Início:" class="inputDtInicio"><br>
              <img  id="logoDtFim" src="/webfolioAdmin/assets/img/dataFim.png"><input type="date" placeholder="Data de Término:" class="inputDtFim"><br>
              <span class="labelAtiva">Ativa:</span>
              <div class="switch">
                <input id="toggle" class="toggle toggle-round-flat" type="checkbox">
                <label for="toggle"></label>
              </div>
            </div>
          </div>
        </div>
    </body>
</html>
