<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Cadastro Turma</title>

        <script src="{{web_dir}}node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="{{web_dir}}semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{web_dir}}assets/css/cadastro.css">
    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        {% include 'menuLateralCadastro.html.twig' with {"dadosMenuLateralCadastro": dadosMenuLateralCadastro } only %}
        <div class="menuIcones">
          <div class="line"></div>
          <a href="#" class="linkCircle"><div class="circle" id="circleTurma" style="background-color: #9187c7;"><img src="{{web_dir}}assets/img/Turma.png" class="iconCircleMenu"></div></a>
          <a href="{{rota_dir}}portfolioPropositor" class="linkCircle"><div class="circle" id="circlePortProp"><img src="{{web_dir}}assets/img/Portfólio e Propositores.png" class="iconCircleMenu"></div></a>
          <a href="{{rota_dir}}tutores" class="linkCircle"><div class="circle" id="circleTutores"><img src="{{web_dir}}assets/img/Tutores.png" class="iconCircleMenu" width="35" height="45"></div></a>
          <a href="{{rota_dir}}alunos" class="linkCircle"><div class="circle" id="circleAlunos"><img src="{{web_dir}}assets/img/alunos.png" class="iconCircleMenu"></div></a>
          <a href="{{rota_dir}}tutoresAlunos" class="linkCircle"><div class="circle" id="circleTutoresAlunos"><img src="{{web_dir}}assets/img/Turma.png" class="iconCircleMenu"></div></a>

          <div class="legenda" id="legendaTurmas">TURMA</div>
          <div class="legenda">PORTFÓLIOS E PROPOSITORES</div>
          <div class="legenda" id="legendaTutores">TUTORES</div>
          <div class="legenda" id="legendaAlunos">ALUNOS</div>
          <div class="legenda" id="legendaTutoresAlunos">TUTORES E ALUNOS</div>
        </div>

        <div class="cadastroTurma">
          <div class="tituloCadastro">Nova turma</div>
          <div class="campoCadastro">
            <div class="colunaEsquerda">
              <img  id="logoCodTurma" src="{{web_dir}}assets/img/codTurma.png"><input type="text"  class="inputCod" {%if dadosTurma is not empty %}value='{{dadosTurma.dsCode}}'{%else%}placeholder="Código:"{%endif%}><br>
              <textarea rows="15" cols="75" placeholder="Descrição:" class="inputDescricao">{%if dadosTurma is not empty %} {{dadosTurma.dsDescription}} {%endif%}</textarea>
            </div>
            <div class="colunaDireita">
              <img  id="logoDtInicio" src="{{web_dir}}assets/img/dataInicio.png"><input type="date"{%if dadosTurma is not empty %} value='{{dadosTurma.dtStart}}'{%else%}placeholder="Data de Início:"{%endif%} class="inputDtInicio"><br>
              <img  id="logoDtFim" src="{{web_dir}}assets/img/dataFim.png"><input type="date" {%if dadosTurma is not empty %} value='{{dadosTurma.dtFinish}}'{%else%}placeholder="Data de Término:"{%endif%} class="inputDtFim"><br>
              <span class="labelAtiva">Ativa:</span>

              <div class="switch">
                <input id="toggle" class="toggle toggle-round-flat" type="checkbox" {%if dadosTurma is not empty and dadosTurma.stStatus =='A' %} checked{%endif%}>
                <label for="toggle"></label>
              </div>
            </div>
          </div>
          {{ form_start(formClass) }}
              {{form_row(formClass.DsCode)}}
              {{form_row(formClass.DsDescription)}}
              {{form_row(formClass.StStatus)}}
              {{form_row(formClass.DtStart)}}
              {{form_row(formClass.DtFinish)}}
              <input type="submit" id="salvarEdicao" value="SALVAR">
          {{ form_end(formClass) }}
        </div>
    </body>
</html>
<script src="{{web_dir}}assets/js/cadastroTurma.js"></script>
