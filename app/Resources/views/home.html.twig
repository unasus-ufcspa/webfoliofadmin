<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Fólio Administrador</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{web_dir}}../assets/css/home.css">

    </head>
    <body>
        {{ include('menuLateral.html.twig') }}

        <div class="ui middle aligned center aligned grid">
            <div class="three wide column grid center aligned">
              <div class="row icone" onclick="window.location='{{web_dir}}turmas'">
                <img src="../assets/img/turma.svg">
              </div>
              <div class="row">
                <span class="label" onclick="window.location='{{web_dir}}turmas'">TURMAS</span>
              </div>
            </div>

            <div class="three wide column grid center aligned" >
              <div class="row icone" onclick="submenuUsuario();">
                <img src="../assets/img/user.svg">
              </div>
              <div class="row">
                <span class="label">USUÁRIOS</span>
              </div>
              <div class="row">
                <span id="legendaUsuarios">propositores ou administradores</span>
              </div>

              <div class="row" >
                <div id="divSubmenuUsuarios">
                  <div id="seta"></div>
                  <a href="{{web_dir}}administradores" >
                    <div class="ui medium button" id="botaoSubmenu">ADMIN</div>
                  </a>
                  <a href="{{web_dir}}propositores">
                    <div class="ui medium button" id="botaoSubmenu">PROPOSITOR</div>
                  </a>
                </div>
              </div>
            </div>

            <div class="three wide column grid center aligned">
              <div class="row icone">
                <img src="../assets/img/portfolio.svg" onclick="window.location='{{web_dir}}portfolios'">
              </div>
              <div class="row">
                <span class="label" onclick="window.location='{{web_dir}}portfolios'">PORTFÓLIOS</span>
              </div>
            </div>
        </div>
    </body>
</html>
<script>
  function submenuUsuario() {
      var x = document.getElementById("divSubmenuUsuarios");
      if (x.style.display != "block") {
          x.style.display="block";
      } else {
          x.style.display="none";
      }
  }
</script>
