<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Editar Portfólio</title>

        <script src="{{web_dir}}../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="{{web_dir}}../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{web_dir}}../assets/css/editarPortfolio.css">

    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        <div id="header">
            <img src="{{web_dir}}../assets/img/iconePortfolio.png" id="iconPortfolio">
            <span id="titulo">PORTFÓLIO:</span>

             {{ form_start(formPort) }}
                <div class="formInfoPortfolio">
                  <div class="ui grid" >
                      <div class="twelve wide column grid">
                        <div class="rowEditar">
                            {{form_row(formPort.DsTitle, { 'attr' : { 'placeholder' : 'Título' , 'class': 'formEditar'  }})}}
                        </div>

                        <div class="rowEditar">
                            {{form_row(formPort.DsDescription, { 'attr' : { 'placeholder' : 'Descrição' , 'class': 'formEditar textAreaDescricao'  }})}}
                        </div>
                    </div>
                    <input type="submit" id="salvarEdicaoPortfolio" value="SALVAR">
                  </div>
                </div>
            {{ form_end(formPort) }}
        </div>

        <div id="adicionarAtividade">
          <div class="addAtividade">
            {{ form_start(formAtiv) }}
                <div class="ui grid">
                  <div class="twelve wide column grid">
                    <div class="rowEditar">
                        {{form_row(formAtiv.DsTitle, { 'attr' : { 'placeholder' : 'Título da atividade' , 'class': 'formEditar formEditarAtividade'  }})}}
                    </div>

                    <div class="rowEditar">
                        {{form_row(formAtiv.DsDescription, { 'attr' : { 'placeholder' : 'Descrição da atividade' , 'class': 'formEditar formEditarAtividade textAreaDescricao' }})}}
                    </div>
                  </div>
                  <input type="submit" id="salvarEdicao" value="Adicionar">
                </div>
            {{ form_end(formAtiv) }}
          </div>
        </div>

{% set foo = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Sociis natoque penatibus et magnis dis parturient montes nascetur ridiculus. A cras semper auctor neque vitae tempus quam pellentesque nec. Diam volutpat commodo sed egestas egestas fringilla phasellus faucibus scelerisque. Aliquam ultrices sagittis orci a. Dictum varius duis at consectetur lorem donec massa sapien faucibus. Neque vitae tempus quam' %}
        <div id="listaAtividades">
          {% for i in 0..10 %}
            {% if i is odd %}
              <div class="itemAtividadeA itemAtividade">
                  <input type="checkbox" name="Atividade[]" value="{{i}}" id="{{i}}" class="checkboxItem"> <!--O id desse item tem que ser o contador pra que o checkbox funcione-->
                  <label for="{{i}}"></label>                             <!--Dentro desse for vai o id que foi colocado no checkbox pra que um fique ligado ao outro-->
                  <div class="nomeAtividade">Teste</div>
                  <div class="dsAtividade">Descrição da atividade</div>
                  <div class="divEditarAtividade">
                    <img src="{{web_dir}}../assets/img/buttonPencil.png" class="iconEditar" title="Editar atividade">
                  </div>
              </div>
            {% else %}
              <div class="itemAtividadeB itemAtividade">
                  <input type="checkbox" name="Atividade[]" value="{{i}}" id="{{i}}" class="checkboxItem"> <!--O id desse item tem que ser o contador pra que o checkbox funcione-->
                  <label for="{{i}}"></label>                             <!--Dentro desse for vai o id que foi colocado no checkbox pra que um fique ligado ao outro-->
                  <div class="nomeAtividade">Teste</div>
                  <div class="dsAtividade">{{ foo }}</div>
                  <div class="divEditarAtividade">
                    <img src="{{web_dir}}../assets/img/buttonPencil.png" class="iconEditar" title="Editar atividade">
                  </div>
              </div>
            {% endif %}
            <div class="editarUser" id="{{i}}">
            </div>
          {% endfor %}
        </div>

        <div id="delete">
            <img src="{{web_dir}}../assets/img/lixo.png" id="iconDelete" title="Excluir item" onclick="excluirAtividade()">
        </div>
    </body>
</html>
