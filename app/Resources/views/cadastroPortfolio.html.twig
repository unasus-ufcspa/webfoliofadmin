<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Editar Portfólio</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/editarPortfolio.css">

    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        <div id="header">
            <img src="../assets/img/iconePortfolio.png" id="iconPortfolio">
            <span id="titulo">PORTFÓLIO:</span>

            {#  {{ form_start(formPort) }}
                <div class="formInfoPortfolio">
                  <div class="ui grid" >
                      <div class="twelve wide column grid">
                        <div class="rowEditar">
                            {{form_row(formPort.DsTitle, { 'attr' : { 'placeholder' : 'Título' , 'class': 'formEditar'  }})}}
                        </div>

                        <div class="rowEditar">
                            {{form_row(formPort.DsDescription, { 'attr' : { 'placeholder' : 'Descrição' , 'class': 'formEditar textAreaDescricao'  }})}}
                        </div>
                    </div>
                  </div>
                </div>
                {{ form_end(formPort) }}#}
        </div>
        <div id="listaAtividades">
{% for i in 0..10 %}
            <div class="addAtividade">
              {{ form_start(formPort) }}
                  <div class="ui grid" >
                    <input type="checkbox" name="Portfolios[]" value="234" id="{{i}}" class="checkboxUser">
                    <label for="{{i}}"></label>
                    <div class="twelve wide column grid">
                      <div class="rowEditar">
                          {{form_row(formPort.DsTitle, { 'attr' : { 'placeholder' : 'Título' , 'class': 'formEditar formEditarAtividade'  }})}}
                      </div>

                      <div class="rowEditar">
                          {{form_row(formPort.DsDescription, { 'attr' : { 'placeholder' : 'Descrição' , 'class': 'formEditar formEditarAtividade textAreaDescricao' }})}}
                      </div>
                    </div>
                  </div>
              {{ form_end(formPort) }}
            </div>
          {% endfor %}
        </div>


