<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Turmas</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">

        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/registroUsuarios.css">
    </head>

    <body>
        {{ include('menuLateral.html.twig') }}
        <div id="header">
            <img src="../assets/img/person-branco.png" id="iconPessoa">
            <span id="titulo">TURMAS</span>
        </div>
        <div id="pesquisa">
            <img src="../assets/img/lupa.png" id="iconLupa" title="Pesquisar">
            <input type="text" placeholder="Procurar Turma" id="inputPesquisa">
            <div class="ui medium button" id="addUser" onclick="window.location = '{{web_dir}}cadastroTurma/-1';">NOVA TURMA</div>
        </div>

        <h2 id="naoEncontrado">Nenhum resultado encontrado</h2>
        <div id="listaUsers">
            {% set i=0 %}
            {% for turma in turmas %}
                {% if i is even %}                                              <!--Testa se é par ou ímpar só pra poder aplicar o CSS no item da lista-->
                    <div class="itemUserA itemUsuario">
                        <input type="checkbox" name="Turma" value="{{turma.idClass}}" id="{{i}}" class="checkboxUser"> <!--O id desse item tem que ser o contador pra que o checkbox funcione-->
                        <label for="{{i}}"></label>                             <!--Dentro desse for vai o id que foi colocado no checkbox pra que um fique ligado ao outro-->
                        <div class="nomeUser">{{turma.dsCode}}  -  {{ turma.dsDescription}}</div>
                        <div class="emailUser"> {%if turma.idPortfolio >-1 %} {{turma. dsTitlePortfolio }} {%else%} SEM PORTFÓLIO VINCULADO {%endif%} </div>
                        <img src="../assets/img/buttonPencil.png" class="iconEditar" title="Editar turma" onclick="window.location = '{{web_dir}}cadastroTurma/{{turma.idClass}}';">
                    </div>
                {% else %}
                    <div class="itemUserB itemUsuario">
                        <input type="checkbox" name="Turma" value="{{turma.idClass}}" id="{{i}}" class="checkboxUser">
                        <label for="{{i}}"></label>
                        <div class="nomeUser">{{turma.dsCode}}  -  {{ turma.dsDescription}}</div>
                        <div class="emailUser">{%if turma.idPortfolio >-1 %} {{turma.dsTitlePortfolio }} {%else%} SEM PORTFÓLIO VINCULADO {%endif%} </div>
                        <img src="../assets/img/buttonPencil.png" class="iconEditar" title="Editar turma" onclick="window.location = '{{web_dir}}cadastroTurma/{{turma.idClass}}';">
                    </div>
                {% endif %}
                <div class="editarUser" id="{{i}}">
                </div>
                {% set i = i+1 %}
            {% endfor %}

            {%if turmas is empty %}
                <h2 id="userEmpty">Não há turmas cadastradas</h2>
            {%endif%}
        </div>
        <div id="excluirUsuario">
            <div id="titleExcluir">Excluir</div>
            <div id="mensagemExcluir">Tem certeza que deseja excluir essa turma?</div>
            <div id="optionExcluir">
                <div id="cancelarExcluir" onclick="cancelarExcluir();">CANCELAR</div>
                <div id="confirmarExcluir">SIM</div>
            </div>
        </div>
        <div id="delete">
            <img src="../assets/img/lixo.png" id="iconDelete" title="Excluir item" onclick="excluirUser()">
        </div>
    </body>
</html>
<script src="../assets/js/registroUsuarios.js"></script>
