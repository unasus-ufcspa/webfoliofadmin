<!DOCTYPE html>
<html>
    <head>
        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <title>Fólio Administrador</title>

        <script src="../node_modules/semantic-ui/node_modules/jquery/dist/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="../semantic/dist/semantic.min.css">
        <script src="../semantic/dist/components/form.js"></script>
        <script src="../semantic/dist/components/popup.js"></script>


        <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="../assets/css/login.css">
    </head>
    <body>
        <div class="ui middle aligned center aligned grid">
            <div class="eight wide column grid">
              <div class="row" id="rowLogo">
                <h2 class="ui centered large image">
                    <img src="../assets/img/Logo.png" class="ui centered medium image">
                </h2>
              </div>
              <div class="row">
                <form class="ui form" {{ form_start(form) }}
                  <div class="row">
                    <img src="../assets/img/person-roxo.png" class="Person-Roxo">
                      <div class="ui input">
                       {{form_row(form.DsEmail, { 'attr' : { 'placeholder' : 'usuário'   }})}}
                      </div>
                  </div>
                  <div class="row">
                      <img src="../assets/img/hand.png" class="Hand">
                      <div class="ui input">
                          {{form_row(form.DsPassword, { 'attr' : {'placeholder' : 'senha' }})}}
                      </div>
                  </div>
                  <div class="row">
                      <input class="ui medium button" id="botaoSubmit" type="submit" value="ENTRAR">
                  </div>
                  {{ form_end(form) }}
                </div>

                <div class="row">
                    <a id="resetSenha" href="#">esqueceu sua senha?</a>
                </div>
            </div>
        </div>
    </body>
</html>
{% if erro != '' %}
    <script>
      var row = document.getElementsByClassName("row");
      $(row[1]).append("<div class='ui medium error message'><div class='header'>" + "{{erro}}" + "</div></div>");
    </script>
{% endif %}
